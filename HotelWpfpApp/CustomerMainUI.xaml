<Window x:Class="HotelWpfpApp.CustomerMainUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelWpfpApp"
        mc:Ignorable="d"
        Title="CustomerMainUI" Height="450" Width="800"
        Loaded="StartWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="frMain" NavigationUIVisibility="Visible" Grid.Column="1"/>
        <StackPanel Background="#FFC7A882" Grid.Column="0">
            
            <Button x:Name="btnNavBooking" Content="My Booking" Height="40" Background="#FFC7A882" Foreground="White" FontSize="16" BorderThickness="0,0,0,1" Click="btnNavBooking_Click" VerticalAlignment="Top" Margin="0,97,0,0"/>
            <Button x:Name="btnNavProfile" Content="My Profile" Height="40" Background="#FFC7A882" Foreground="White" FontSize="16" BorderThickness="0,0,0,1" Click="btnNavProfile_Click"/>
            <Button x:Name="btnLogout" Content="Logout" Height="35" Background="#FFC7A882" Foreground="White" FontSize="16" BorderThickness="0,0,0,0" Click="btnLogout_Click"/>
        </StackPanel>
    </Grid>
</Window>
