<Page x:Class="HotelWpfpApp.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelWpfpApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="#f5f5f5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="387">
            <TextBlock Text="Login" FontSize="36" FontWeight="Bold" Foreground="#333333" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <StackPanel Margin="0 20">
                <Label Content="Username" FontSize="18" FontWeight="Bold" Foreground="#333333"/>
                <TextBox x:Name="UsernameTextBox" TextWrapping="Wrap" Height="40" FontSize="18" BorderThickness="1" BorderBrush="#999999" Margin="0 5"/>
                <Label Content="Password" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0 10"/>
                <PasswordBox x:Name="PasswordBox" Height="40" FontSize="18" BorderThickness="1" BorderBrush="#999999" Margin="0 5"/>
                <Button Content="Login" Click="LoginButton_Click" FontSize="24" FontWeight="Bold" Background="#007ACC" Foreground="White" Height="50" Margin="0 20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
